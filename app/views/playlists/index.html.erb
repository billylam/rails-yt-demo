<h1>Listing playlists</h1>

<table>
  <tr>
    <th></th>
    <th>Name</th>
    <th></th>
  </tr>

<% @playlists.each do |playlist| %>
  <tr>
    <td><%= link_to image_tag(get_thumbnail_for(playlist.videos.first.youtube_id)), playlist_path(id:playlist.id) %></td>
    <td><%= playlist.name %></td>
    <td><%= link_to 'Destroy', playlist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Playlist', new_playlist_path %>
