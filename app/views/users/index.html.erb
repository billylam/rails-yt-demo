<h1>Users</h1>

<ul>
  <% @users.each do |user| %>
    <% if (!current_user? user) && (can? :view, user) %>
      <li>
      <%= tag "span", allow_button_user_id:user.id, id:"allow_button_container" %><%= render 'allow_button', user: user %> </span>
      <%= link_to user.username, user_path(user.id) %> 
      </li>
    <% end %>
  <% end %>
</ul>
